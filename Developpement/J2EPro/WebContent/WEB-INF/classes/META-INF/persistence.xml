<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="pu_j2ee" transaction-type="RESOURCE_LOCAL">
    	<provider>org.hibernate.ejb.HibernatePersistence</provider>
    	<class>entities.Client</class>
    	<class>entities.Commande</class>
    	<class>entities.Menu</class>
    	<class>entities.MenuId</class>
    	<class>entities.Panier</class>
    	<class>entities.Plat</class>
    	<class>entities.PlatId</class>
    	<class>entities.Produit</class>
    	<class>entities.Traiteur</class>
        <properties>
            <property name="hibernate.ejb.cfgfile" value="hibernate.cfg.xml"></property> 
        </properties>
    </persistence-unit>
</persistence>